@page
@model NewApplication.Pages.TodoList.EditModel
@{
}
<br />
<h2 class="text-info">Edit Todo</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Todo.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Todo.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Todo.Name" class="form-control" />
            </div>
            <span asp-validation-for="Todo.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Todo.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Todo.Description" class="form-control" />
            </div>
            <span asp-validation-for="Todo.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}